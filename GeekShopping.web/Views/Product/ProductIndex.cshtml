@model IEnumerable<GeekShopping.web.Models.ProductModel>

<br />
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Product List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="ProducCreate" class="bnt btn-outline-primary">
                <i class="fas fa-plus"></i>Create a new Produc
            </a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Category
                </th>
                <th>
                    Price
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>
                        @item.Name
                    </th>
                    <th>
                        @item.CategoryName
                    </th>
                    <th>
                        @item.Price
                    </th>
                </tr>
            }
        </tbody>
    </table>
</div>